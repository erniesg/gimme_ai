{
  "steps": [
    {
      "name": "initialize",
      "endpoint": "/api/init",
      "method": "POST"
    },
    {
      "name": "process",
      "endpoint": "/api/process/{job_id}",
      "method": "POST",
      "depends_on": [
        "initialize"
      ],
      "poll": {
        "endpoint": "/api/status/{job_id}",
        "interval": "5s",
        "max_attempts": 60
      }
    },
    {
      "name": "finalize",
      "endpoint": "/api/finalize/{job_id}",
      "method": "POST",
      "depends_on": [
        "process"
      ]
    }
  ],
  "defaults": {
    "method": "POST",
    "timeout": "5m",
    "polling_interval": "5s",
    "retry_limit": 3,
    "retry_delay": "5s"
  }
}